    "ObjectId": {
        "category": "native"
    },
    "ObjectType": {
        "category": "native"
    },
    "buffer map async": {
        "category": "command",
        "inputs": [
            { "name": "buffer id", "type": "ObjectId" },
            { "name": "request serial", "type": "uint32_t" },
            { "name": "start", "type": "uint32_t" },
            { "name": "size", "type": "uint32_t" },
            { "name": "is write", "type": "bool" }
        ]
    },
    "buffer map read async callback": {
        "category": "return command",
        "inputs": [
            { "name": "buffer", "type": "buffer", "annotation": "handle" },
            { "name": "request serial", "type": "uint32_t" },
            { "name": "status", "type": "uint32_t" },
            { "name": "count", "type": "uint32_t" },
            { "name": "data", "type": "uint8_t", "annotation": "const*", "length": "count" }
        ]
    },
    "buffer map write async callback": {
        "category": "return command",
        "inputs": [
            { "name": "buffer", "type": "buffer", "annotation": "handle" },
            { "name": "request serial", "type": "uint32_t" },
            { "name": "status", "type": "uint32_t" }
        ]
    },
    "buffer update mapped data": {
        "category": "command",
        "inputs": [
            { "name": "buffer id", "type": "ObjectId" },
            { "name": "count", "type": "uint32_t" },
            { "name": "data", "type": "uint8_t", "annotation": "const*", "length": "count" }
        ]
    },
    "destroy object": {
        "category": "command",
        "inputs": [
            { "name": "object type", "type": "ObjectType" },
            { "name": "object id", "type": "ObjectId" }
        ]
    },
    "device error callback": {
        "category": "return command",
        "inputs": [
            { "name": "message", "type": "char", "annotation": "const*", "length": "strlen" }
        ]
    },
    "fence update completed value": {
        "category": "return command",
        "inputs": [
            { "name": "fence", "type": "fence", "annotation": "handle" },
            { "name": "value", "type": "uint64_t" }
        ]
    },
    "_params": {
        "client_side_commands": [
            "FenceGetCompletedValue"
        ],
        "client_custom_commands": [
            "BufferUnmap",
            "DeviceCreateFence",
            "FenceGetCompletedValue",
            "QueueSignal"
        ],
        "client_special_objects": [
            "Buffer",
            "Device",
            "Fence"
        ],
        "server_custom_pre_handler_commands": [
            "BufferUnmap"
        ],
        "server_custom_commands": [
            "QueueSignal"
        ],
        "server_reverse_lookup_objects": [
            "Fence"
        ]
    }
}
