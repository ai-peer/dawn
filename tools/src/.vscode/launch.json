    "version": "0.2.0",
    "configurations": [
        {
            "name": "tests",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cts/query/query_test.go",
            "args": [
                "-test.run",
                "TestContains"
            ]
        },
        {
            "name": "cts reduce",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/cts/main.go",
            "args": [
                "reduce",
                "-o",
                "blah.txt",
                "results.txt",
            ]
        },
        {
            "name": "cts update",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/cts/main.go",
            "args": [
                "update",
                "--expectations",
                "WebGPUExpectations.txt",
            ]
        },
    ]
}
