    "version": "0.2.0",
    "configurations": [
        {
            "name": "tests",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cts/expectations/update_test.go",
            "args": [
                "-test.run",
                "TestUpdate"
            ]
        },
        {
            "name": "cts reduce",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/cts",
            "args": [
                "reduce",
                "-o",
                "blah.txt",
                "results.txt",
            ]
        },
        {
            "name": "cts merge",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/cts",
            "args": [
                "merge",
                "-a",
                "results_a.txt",
                "-b",
                "results_b.txt",
                "-o",
                "results.txt",
            ]
        },
        {
            "name": "cts update",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/cts",
            "args": [
                "update",
                "--expectations",
                "${workspaceFolder}/../../webgpu-cts/expectations.txt",
                "--results",
                "${workspaceFolder}/results.txt"
            ]
        },
    ]
}
